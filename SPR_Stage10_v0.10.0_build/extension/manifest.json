{
  "manifest_version": 3,
  "name": "Self-Prompt Reflection (SPR)",
  "version": "0.7.0",
  "description": "Capture, analyze, and improve your AI prompts.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://claude.ai/*",
    "*://gemini.google.com/*",
    "*://www.perplexity.ai/*",
    "*://replit.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://www.perplexity.ai/*",
        "*://replit.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SPR"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "optional_host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://*.onrender.com/*",
    "https://*.fly.dev/*",
    "https://*.railway.app/*",
    "https://*.up.railway.app/*",
    "https://*.vercel.app/*",
    "https://*.netlify.app/*"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}